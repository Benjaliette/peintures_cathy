<div class="container">
  <div class="painting-form">
    <%= simple_form_for @painting do |f| %>
      <div class="form-part">
        <div class="form-group">
          <%= f.label 'Nom du tableau' %>
          <%= f.input :title,
                      label: false,
                      required: true %>
        </div>
        <div class="form-group-text">
          <%= f.label 'Décrire en quelques mots le tableau' %>
          <%= f.input :description,
                      label: false,
                      required: true %>
        </div>
        <div class="form-group">
          <%= f.label 'A quel prix ?' %>
          <%= f.input :price,
                      label: false,
                      required: true,
                      value_method: :price %>
        </div>
        <div class="form-group checkbox">
          <%= f.label 'Est-il à vendre ?' %>
          <%= f.collection_radio_buttons :sell, [[true, 'Oui'], [false, 'Non']], :first, :last, label: false %>
        </div>
      </div>
      <div class="form-part">
        <div class="form-group-picture" data-controller="file-upload">
          <%= f.label 'Photo du tableau' %>
          <%= cl_image_tag @painting.photo.key, class: 'painting-pic-edit-form', data: { file_upload_target: 'image' } %>
          <ul class="overview-div" data-file-upload-target='overview'></ul>
          <%= f.input :photo,
                      as: :file,
                      label: false,
                      input_html: { class: 'upload-button edit' } %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Modifier', class: 'btn-principal' %>
      </div>
    <% end %>
  </div>
</div>
