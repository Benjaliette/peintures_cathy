<div data-controller="disapear-navbar disapear-footer">
  <div class='devise-logo'>
    <%= link_to paintings_path do %>
      <%= image_tag 'black_signature.png' %>
    <% end %>
  </div>
  <div class="id-form">
    <h2>S'identifier</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <div class="form-group">
          <%= f.label :email, 'Identifiants (email)' %>
          <%= f.email_field :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "Identifiants (email)" } %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Mot de passe' %>
          <%= f.password_field :password,
                    required: false,
                    input_html: { autocomplete: "Mot de passe" } %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label "Se rappeler de moi", class: "control-label" %>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: 'btn-principal' %>
      </div>
    <% end %>

    <div class='sign-up'>Vous n'avez pas encore de compte ? <%= link_to 'CrÃ©er un compte', new_user_registration_path %></div>
  </div>
</div>
