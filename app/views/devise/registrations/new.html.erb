<div data-controller="disapear-navbar disapear-footer">
  <div class='devise-logo'>
    <%= link_to peintures_path do %>
      <%= image_tag 'black_signature.png' %>
    <% end %>
  </div>
  <div class="id-form">
    <h2>Se créer un compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group">
            <%= f.label :first_name, 'Prénom *' %>
            <%= f.text_field :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Prénom" } %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, 'Nom *' %>
            <%= f.text_field :last_name,
                        required: true,
                        input_html: { autocomplete: "Nom" } %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'Adresse e-mail *' %>
            <%= f.email_field :email,
                      required: true,
                      input_html: { autocomplete: "email" } %>
          </div>
          <div class="form-group">
            <%= f.label :password, 'Mot de passe *' %>
            <%= f.password_field :password,
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "Mot de passe" } %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirmation du mot de passe *' %>
            <%= f.password_field :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "Confirmation du mot de passe" } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Créer le compte", class: 'btn-principal' %>
        </div>
      <% end %>

      <div class='sign-up'>Les champs marqués par un '*' sont obligatoires</div>
  </div>
</div>
